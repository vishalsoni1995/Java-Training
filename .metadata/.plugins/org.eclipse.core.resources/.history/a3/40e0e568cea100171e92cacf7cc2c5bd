
public class Reverse {
	
	private int number, reverse;
	
	public void setNumber(int n)
	{
		number = n;
	}
	
	public void findReverse()
	{
		int sum=0;
		int rem;
		while(number!=0)
		{
		rem = number%10;
		sum = sum*10 + rem;
    	number = number/10;	
		}
		
		reverse = sum;
	}
	
	public int getReverse()
	{
		return reverse;
	}

}
