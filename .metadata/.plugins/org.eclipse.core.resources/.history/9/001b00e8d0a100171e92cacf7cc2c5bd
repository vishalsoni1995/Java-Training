
public class Palindrome {
	
	private int actualNumber, reverseNumber;
   
	 public void setNumber(int n)
	 {
		 actualNumber = n;
	 }
	 
	 public boolean check()
	 {
		 Reverse s = new Reverse();
		 if (actualNumber == s.findReverse(actualNumber))
		 {
			 return true;
		 }
		 else
		 {
			 return false;
		 }
	 }

}
